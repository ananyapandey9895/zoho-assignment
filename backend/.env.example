# Server Configuration
PORT=5001
NODE_ENV=development

# Database Configuration
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/dbname
# For local: mongodb://localhost:27017/zoho_clone
# Leave empty to use in-memory database (development only)
MONGODB_URI=

# Stripe Configuration
# Get from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_YOUR_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLIC_KEY

# Webhook Secret (optional, for production webhooks)
STRIPE_WEBHOOK_SECRET=

# Frontend URL
# Development: http://localhost:5173
# Production: https://your-frontend-domain.vercel.app
FRONTEND_URL=http://localhost:5173
